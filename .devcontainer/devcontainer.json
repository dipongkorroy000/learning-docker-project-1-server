{
  "name": "project-1",
  "image": "node:20",
  "workspaceFolder": "/app",
  "mounts": [
    // Bind mount for your local project
    "source=/home/dipongkorroy/developing/docker-learning/project-1,target=/app,type=bind",

    // Named volume for logs (similar to: -v ts-docker-logs://app/logs)
    "source=ts-docker-logs,target=/app/logs,type=volume",

    // Anonymous volume for node_modules (similar to: -v //app/node_modules)
    "target=/app/node_modules,type=volume"
  ],
  "runArgs": [
    "--name",
    "project-1-cnt-1",
    "-p",
    "5000:5000",
    "--rm" // Automatically remove the container after exiting VS Code
  ],
  "postCreateCommand": "npm install"
}

/**   
*           this command extension
*  docker run -p 5000:5000 --rm --name project-1-cnt-1 -v project-1-vol-1:/app/logs -w //app -v "/home/dipongkorroy/developing/docker-learning/project-1"://app -v //app/node_modules project-1:v1
*
*  docker run -p 5000:5000 --rm --name project-1-cnt-1 -v project-1-vol-1:/app/logs -w //app -v "(pwd)://app" -v //app/node_modules project-1:v1
*
*/
